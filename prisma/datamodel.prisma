type Account {
  id: ID! @id
  username: String @unique
  email: String! @unique
  password: String!
  isVerified: Boolean! @default(value: false)
  lastLogin: DateTime
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Verification {
  id: ID! @id
  accountId: String!
  token: String!
  createdAt: DateTime! @createdAt
}
