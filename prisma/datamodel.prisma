type Account {
  id: ID! @id
  username: String @unique
  email: String! @unique
  password: String!
  isVerified: Boolean! @default(value: false)
  lastLogin: DateTime
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Token {
  id: ID! @id
  accountId: String!
  token: String! @unique
  type: TokenType @efault(value: EMAIL)
  createdAt: DateTime! @createdAt
}

enum TokenType {
  PASSWORD
  EMAIL
}
